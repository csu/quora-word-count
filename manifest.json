{
  "name": "Q Word Count",
  "version": "0.1",
  "author": "Christopher Su",
  "homepage_url": "https://github.com/csu/quora-word-count",
  "description": "Adds word count to the Quora answer editor.",
  "content_scripts": [
    {
      "matches": ["*://*.quora.com/*"],
      "js": ["jquery-1.11.1.min.js", "word-count.min.js"],
      "run_at": "document_end"
    }
  ],
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "manifest_version": 2
}
